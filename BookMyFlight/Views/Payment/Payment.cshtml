@model BookMyFlight.Models.Payment

@{
    ViewData["Title"] = "Payment";
}

<h1>Payment</h1>
<h4>Pay using Credit or Debit Card</h4>


<div class="row">
    <div class="card-details">
        <form asp-action="Payment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pid" class="control-label"></label>
                <input asp-for="Pid" type="number" class="form-control" placeholder="Enter A Number" />
                <span asp-validation-for="Pid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" type="number" class="form-control" placeholder="Enter your CardNumber" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpDate" class="control-label"></label>
                <input asp-for="ExpDate" type="date" placeholder="Expiry date" class="form-control" />
                <span asp-validation-for="ExpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cvv" class="control-label"></label>
                <input asp-for="Cvv" type="number" placeholder="Enter 3 digit number" class="form-control" />
                <span asp-validation-for="Cvv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameonCard" class="control-label"></label>
                <input asp-for="NameonCard" type="text" placeholder="Enter Name On Card" class="form-control" />
                <span asp-validation-for="NameonCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" name="Pay" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
